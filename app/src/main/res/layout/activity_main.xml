<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/BgImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_ring1"
        tools:srcCompat="@drawable/bg_ring1" />

    <ImageView
        android:id="@+id/CenterImg"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Center screen"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/BgImg"
        app:layout_constraintTop_toTopOf="@+id/BgImg"
        tools:srcCompat="@drawable/boxer_neutral" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:progressDrawable="@drawable/ic_launcher_background"
        android:progressTint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/BgImg"
        app:layout_constraintTop_toTopOf="@+id/BgImg" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="210dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="85dp"
        android:progressDrawable="@drawable/ic_launcher_background"
        android:progressTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/BgImg"
        app:layout_constraintTop_toTopOf="@+id/BgImg" />

    <ImageButton
        android:id="@+id/Card_1"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintStart_toStartOf="@+id/BgImg"
        app:srcCompat="@drawable/card_1"
        tools:srcCompat="@drawable/card_1" />

    <ImageButton
        android:id="@+id/Card_2"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintStart_toEndOf="@+id/Card_1"
        app:srcCompat="@drawable/card_2"
        tools:srcCompat="@drawable/card_2" />

    <ImageButton
        android:id="@+id/Card_3"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintStart_toEndOf="@+id/Card_2"
        app:srcCompat="@drawable/card_3"
        tools:srcCompat="@drawable/card_3" />

    <ImageButton
        android:id="@+id/Card_4"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintStart_toEndOf="@+id/Card_3"
        app:srcCompat="@drawable/card_4"
        tools:srcCompat="@drawable/card_4" />

    <ImageButton
        android:id="@+id/Card_5"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintStart_toEndOf="@+id/Card_4"
        app:srcCompat="@drawable/card_5"
        tools:srcCompat="@drawable/card_5" />

    <ImageButton
        android:id="@+id/Card_6"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toStartOf="@+id/Card_7"
        app:srcCompat="@drawable/card_6"
        tools:srcCompat="@drawable/card_6" />

    <ImageButton
        android:id="@+id/Card_7"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toStartOf="@+id/Card_8"
        app:srcCompat="@drawable/card_7"
        tools:srcCompat="@drawable/card_7" />

    <ImageButton
        android:id="@+id/Card_8"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toStartOf="@+id/Card_9"
        app:srcCompat="@drawable/card_8"
        tools:srcCompat="@drawable/card_8" />

    <ImageButton
        android:id="@+id/Card_9"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toStartOf="@+id/Card_10"
        app:srcCompat="@drawable/card_9"
        tools:srcCompat="@drawable/card_9" />

    <ImageButton
        android:id="@+id/Card_10"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/BgImg"
        app:layout_constraintEnd_toEndOf="@+id/BgImg"
        app:srcCompat="@drawable/card_0"
        tools:srcCompat="@drawable/card_0" />

</android.support.constraint.ConstraintLayout>