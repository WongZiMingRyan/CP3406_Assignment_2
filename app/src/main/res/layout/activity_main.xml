<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImgViewBG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_ring"
        tools:srcCompat="@drawable/bg_ring" />

    <ImageView
        android:id="@+id/ImgViewCenter"
        android:layout_width="172dp"
        android:layout_height="115dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="141dp"
        android:contentDescription="Center screen"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/ImgViewBG"
        app:layout_constraintTop_toTopOf="@+id/ImgViewBG"
        app:srcCompat="@drawable/boxer_neutral"
        tools:srcCompat="@drawable/boxer_neutral" />

    <ImageButton
        android:id="@+id/BtnBell"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bell1"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewBG"
        app:layout_constraintStart_toStartOf="@+id/ImgViewBG"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bell1" />

    <ProgressBar
        android:id="@+id/ProgBarBlue"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:indeterminate="false"
        android:progress="100"
        android:progressTint="@color/boxerBlue"
        app:layout_constraintEnd_toStartOf="@+id/BtnBell"
        app:layout_constraintStart_toStartOf="@+id/ImgViewBG"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/ProgBarRed"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="85dp"
        android:indeterminate="false"
        android:progress="100"
        android:progressTint="@color/boxerRed"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/BtnBell"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxtViewQN"
        android:layout_width="510dp"
        android:layout_height="35dp"
        android:fontFamily="@font/press_start_2p"
        android:text="READY"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewCenter"
        app:layout_constraintStart_toStartOf="@+id/ImgViewCenter"
        app:layout_constraintTop_toBottomOf="@+id/ProgBarRed" />

    <TextView
        android:id="@+id/TxtViewANS"
        android:layout_width="510dp"
        android:layout_height="35dp"
        android:fontFamily="@font/press_start_2p"
        android:text="TAP THE BELL TO BEGIN"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewCenter"
        app:layout_constraintStart_toStartOf="@+id/ImgViewCenter"
        app:layout_constraintTop_toBottomOf="@+id/TxtViewQN" />

    <ImageView
        android:id="@+id/ImgViewTBox"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Anchor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgViewCenter"
        app:srcCompat="@drawable/textbox1"
        tools:srcCompat="@drawable/textbox1" />

    <TextView
        android:id="@+id/TxtViewTBoxLn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="12345678901234567890"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewTBox"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/ImgViewTBox"
        app:layout_constraintTop_toTopOf="@+id/ImgViewTBox" />

    <TextView
        android:id="@+id/TxtViewTBoxLn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="12345678901234567890"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewTBox"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewTBox"
        app:layout_constraintStart_toStartOf="@+id/ImgViewTBox" />

    <ImageButton
        android:id="@+id/Card_1"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toStartOf="@+id/Card_2"
        app:srcCompat="@drawable/card_1"
        tools:srcCompat="@drawable/card_1" />

    <ImageButton
        android:id="@+id/Card_2"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toStartOf="@+id/Card_3"
        app:srcCompat="@drawable/card_2"
        tools:srcCompat="@drawable/card_2" />

    <ImageButton
        android:id="@+id/Card_3"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toStartOf="@+id/Card_4"
        app:srcCompat="@drawable/card_3"
        tools:srcCompat="@drawable/card_3" />

    <ImageButton
        android:id="@+id/Card_4"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toStartOf="@+id/Card_5"
        app:srcCompat="@drawable/card_4"
        tools:srcCompat="@drawable/card_4" />

    <ImageButton
        android:id="@+id/Card_5"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toStartOf="@+id/Anchor"
        app:srcCompat="@drawable/card_5"
        tools:srcCompat="@drawable/card_5" />

    <ImageButton
        android:id="@+id/Card_6"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/Anchor"
        app:srcCompat="@drawable/card_6"
        tools:srcCompat="@drawable/card_6" />

    <ImageButton
        android:id="@+id/Card_7"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/Card_6"
        app:srcCompat="@drawable/card_7"
        tools:srcCompat="@drawable/card_7" />

    <ImageButton
        android:id="@+id/Card_8"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/Card_7"
        app:srcCompat="@drawable/card_8"
        tools:srcCompat="@drawable/card_8" />

    <ImageButton
        android:id="@+id/Card_9"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/Card_8"
        app:srcCompat="@drawable/card_9"
        tools:srcCompat="@drawable/card_9" />

    <ImageButton
        android:id="@+id/Card_10"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintStart_toEndOf="@+id/Card_9"
        app:srcCompat="@drawable/card_0"
        tools:srcCompat="@drawable/card_0" />

    <Button
        android:id="@+id/Anchor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImgViewBG"
        app:layout_constraintEnd_toEndOf="@+id/ImgViewCenter"
        app:layout_constraintStart_toStartOf="@+id/ImgViewCenter" />

</android.support.constraint.ConstraintLayout>